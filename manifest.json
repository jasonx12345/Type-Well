{
  "manifest_version": 3,
  "name": "Typewell — Polish Selected Text",
  "version": "0.4.0",
  "description": "Highlight text → rewrite via Hugging Face Router.",
  "permissions": ["contextMenus", "scripting", "activeTab", "clipboardWrite", "tabs", "storage"],
  "host_permissions": ["<all_urls>", "https://router.huggingface.co/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
